# color
alias ls='ls --color=auto'
alias grep='grep --colour=auto'
alias egrep='egrep --colour=auto'
alias fgrep='fgrep --colour=auto'

# list
alias l='ls -l'
alias ll='ls -l'
alias la='ls -la'

# others
alias r='rails'
alias be='bundle exec'
alias g='git'
alias gs='git s'
alias up='sudo aptitude update; sudo aptitude upgrade'
